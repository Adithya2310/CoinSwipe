# CoinSwipe Server Environment Variables

# Server Configuration
PORT=3002
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3000

# WebSocket Configuration
WEBSOCKET_UPDATE_INTERVAL=2000
MAX_CONNECTIONS_PER_IP=10

# DexScreener API Configuration
DEXSCREENER_BASE_URL=https://api.dexscreener.com/latest/dex
DEXSCREENER_RATE_LIMIT=200

# Cache Configuration
TRENDING_CACHE_DURATION=20000
PRICE_CACHE_DURATION=1000

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
